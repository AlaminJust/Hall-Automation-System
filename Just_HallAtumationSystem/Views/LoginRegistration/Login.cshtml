@model MyApp.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<h1 class="text-center py-5">HALL AUTOMATION SYSTEM</h1>

<section class="mt-2 px-5">
    <div class="container">
        <div class="row">
            <div class="col-md-7 offset-lg-2 offset-md-1 offset-sm-1">
                <div class="card">
                    <div>
                        <h2 class="display-5 text-center card-header bg-info text-white">
                            <strong> Login</strong>
                        </h2>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group mt-3">

                                    <div class="col-md-10 offset-lg-3 offset-md-1">
                                        @Html.LabelFor(model => model.UserName, "Username")
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">

                                    <div class="col-md-10 offset-lg-3 offset-md-1">
                                        @Html.LabelFor(model => model.Password)
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control",@type="password" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>                              
                            </div>
                            <div class="d-flex col-md-10 offset-md-1 offset-lg-3">
                              
                                    <!-- Remember me -->
                                    <div class="form-group">
                                        <div>
                                            <input type="submit" value="Login" class="btn btn-primary" />
                                        </div>
                                    </div>
                                
                                <div class="offset-2">
                                    <!-- Forgot password -->
                                    <p>
                                        @Html.ActionLink("Forgot password?", "ForgetPassword", "LoginRegistration")
                                    </p>
                                </div>
                            </div>


                            <!-- Register -->
                            <p class=" col-md-7 offset-md-1 offset-lg-3">
                                Not a member?
                                @Html.ActionLink("Signup", "RegistrationForm")
                                <span> | @Html.ActionLink("Admin Signup", "Registraion", "Admin")</span>
                            </p>
                            
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
