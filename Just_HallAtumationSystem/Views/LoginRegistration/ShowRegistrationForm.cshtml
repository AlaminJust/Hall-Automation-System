@model IEnumerable<MyApp.Models.RegistrationForm>

@{
    ViewBag.Title = "ShowRegistrationForm";
}

<h2 class="mt-4 text-center">Registration Form</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeptName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RollNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Session)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Password)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.IsVerified)
        </th>*@
        <th>
            Request
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeptName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RollNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Session)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.IsVerified)
        </td>*@
        <td>
            @if (item.IsVerified == 0)
            {
                @Html.ActionLink("Pending", "ActivateTheUser", "LoginRegistration", new { id = item.RegistrationId }, htmlAttributes: null)
            }
            else
            {
                <p>Email Is not Verified.</p>
                @Html.ActionLink("Update", "UpdateRegistraionForm", "LoginRegistration", new { id = item.RegistrationId }, htmlAttributes: null)
            }
        </td>
    </tr>
}

</table>
