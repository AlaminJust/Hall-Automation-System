@model MyApp.Models.EmailVerificationModel

@{
    ViewBag.Title = "EmailVerification";
}

@if (ViewBag.Success != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Success");
            };
    </script>
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-lg-2 offset-md-1 offset-sm-1">
            <div class="card">
                <div class="card-header">
                    <h2 class="display-5 text-center">
                        <strong> Email Verification</strong>
                    </h2>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                             
                                <div class="col-md-10 offset-lg-3 offset-md-1">
                                    @Html.LabelFor(model => model.UserName)
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                               
                                <div class="col-md-10 offset-lg-3 offset-md-1">
                                    @Html.LabelFor(model => model.VerificationCode)
                                    @Html.EditorFor(model => model.VerificationCode, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.VerificationCode, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10 offset-md-1 offset-lg-3">
                                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
