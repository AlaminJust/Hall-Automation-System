@model IEnumerable<MyApp.Models.StudentListModel>

@{
    ViewBag.Title = "StudentList";
}
    <style>
        h3 {
            color:black;
            text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
        }
    </style>

<div class="mt-5 text-center card">
    <div class="card-header bg-success">
        <h3>
            All Students List
        </h3>

    </div>

</div>
@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table table-bordered col-lg-12 col-md-8 col-sm-6">
    <tr>
        <th>
            @Html.ActionLink("Student Name", "StudentList", "ShowDetails", new { id = 0 }, htmlAttributes: null)
        </th>
        <th>
            @Html.ActionLink("Department", "StudentList", "ShowDetails", new { id = 1 }, htmlAttributes: null)
        </th>
        <th>
            
            @Html.ActionLink("Session", "StudentList", "ShowDetails", new { id = 2 }, htmlAttributes: null)

        </th>
        <th>
            @Html.ActionLink("Room No", "StudentList", "ShowDetails", new { id = 3 }, htmlAttributes: null)
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Payment
        </th>
        <th>
            
            @Html.ActionLink("Hall EntryDate", "StudentList", "ShowDetails", new { id = 4 }, htmlAttributes: null)

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.ActionLink(item.student.StudentName, "GetStudentData", "ShowDetails", new { UserName = item.user.UserName }, htmlAttributes: null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.department.DeptName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.departmentInfo.Session)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.room.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.student.MobileNumber)
            </td>
            <td>
                @if (@item.student.PaymentId == null)
                {
                    <p> Incomplete </p>
                }
                else
                {
                    <p> Complete </p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HallEntryDate)
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>*@
        </tr>
    }

</table>
